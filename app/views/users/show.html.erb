<div class="top">
  <h1><%= @user.username %>'s Profile</h1>
  <ul class="menu sign-up top">
    <li> <%= link_to "Sign In", new_user_session_path, class:"button" %> </li>
    <li> <%= link_to "Sign Up", new_user_registration_path, class:"button" %> </li>
    <li>    <% if @user.avatar_url %>
          <img src="<%= @user.avatar_url %>" />
        <% else %>
          <img src="http://rs732.pbsrc.com/albums/ww327/NinjaPie101/Missingno_Sprite1947934836-iaza.gif~c200" %>
        <% end %>
        <%= @user.email %> </li>
  </ul>
</div>
<div class="row">
  <div class="columns small-11">
    <% i = 0 %>
    <% while i < @matches.length do %>
      <% if @matches[i] %>
        <div class="small-12 large-4 columns">
          <img src= '<%=@matches[i].image_url%>' height='200' width='200'/>
        </div>
      <% end %>
      <% if @matches[i+1] %>
        <div class="small-12 large-4 columns">
          <img src= '<%=@matches[i+1].image_url%>' height='200' width='200'/>
        </div>
      <% end %>
      <% if @matches[i+2] %>
        <div class="small-12 large-4 columns">
          <img src= '<%=@matches[i+2].image_url%>' height='200' width='200'/>
        </div>
      <% end %>
      <% i += 3 %>
    <% end %>
  </div>
</div>
